<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical">
  
<com.jason.app.widget.SuperEditText android:layout_gravity="top|left" android:layout_width="fill_parent" android:layout_weight="2" android:layout_height="fill_parent" android:id="@+id/EditMessageBox" android:gravity="top|left"></com.jason.app.widget.SuperEditText>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="60dip" android:layout_width="fill_parent">

<Button  android:layout_height="60dip" android:text="@string/loadFromFile" android:layout_width="fill_parent" android:layout_weight="1" android:id="@+id/ButtonLoadMessageFromFile" android:onClick="onClick"></Button>
<Button  android:layout_height="60dip" android:text="@string/button_save" android:layout_width="fill_parent" android:layout_weight="1" android:id="@+id/ButtonSaveMessage" android:onClick="onClick"></Button>
</LinearLayout>
</LinearLayout>
